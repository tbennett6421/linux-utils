export TF_LOG="DEBUG"
export USER_AGENT='Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:75.0) Gecko/20100101 Firefox/75.0'
export GOPATH=$HOME/go
export WINLOCAL='/mnt/c/Users/tbennett/'
alias cd!="cd $WINLOCAL"
alias curl="curl --user-agent '$USER_AGENT'"

## Detect if on vpn
PULSE_ADAPTER="eth4"

if [[ $(ip a show $PULSE_ADAPTER up) ]]; then
    echo "We appear to be on vpn"
    proxy
else
    echo "We do not appear to be on vpn"
    unproxy
fi

## use git prompt
if [ -f "$HOME/.bash-git-prompt/gitprompt.sh" ]; then
    GIT_PROMPT_ONLY_IN_REPO=1
    source $HOME/.bash-git-prompt/gitprompt.sh
fi

# bash_completion if brew is installed
if [ "$(command -v brew)" ] ; then
    if [ -f $(brew --prefix)/etc/bash_completion ]; then
        source $(brew --prefix)/etc/bash_completion
    fi
fi

# Configure SSH agent
SSH_ENV="$HOME/.ssh/environment"

function start_agent {
    echo "Initialising new SSH agent..."
    /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
    echo succeeded
    chmod 600 "${SSH_ENV}"
    . "${SSH_ENV}" > /dev/null
    /usr/bin/ssh-add;
}

# Source SSH settings, if applicable
if [ -f "${SSH_ENV}" ]; then
    . "${SSH_ENV}" > /dev/null
    #ps ${SSH_AGENT_PID} doesn't work under cywgin
    ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
        start_agent;
    }
else
    start_agent;
fi
